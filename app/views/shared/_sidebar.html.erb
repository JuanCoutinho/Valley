<aside id="sidebar-multi-level-sidebar" class="hidden md:block fixed top-0 left-0 z-100 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0 bg-gray-800 dark:bg-gray-900" aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto">
        <ul class="space-y-2 font-medium">
            <li>
                <center>
                    <%= image_tag 'valley.png', alt: 'Valley Logo', class: 'self-center hidden md:block', style: 'height: 90px; width: 90px;' %>
                </center>
            </li>          
            <li>
                <%= link_to destroy_user_session_path, class: 'flex items-center p-2 text-gray-100 rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 group' do %>
                    <i class="bi bi-chat-left-text-fill"></i>
                    <span class="ms-3">Chat</span>
                <% end %>
            </li>
            <li>
                <%= link_to projects_path, class: 'flex items-center w-full p-2 text-gray-100 transition duration-75 rounded-lg group hover:bg-gray-700 dark:hover:bg-gray-600' do %>
                    <i class="bi bi-box-fill"></i>
                    <span class="flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Projetos</span>
                <% end %>
            </li>
            <li>
                <%= link_to perfil_path, class: 'flex items-center p-2 text-gray-100 rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 group' do %>
                    <i class="bi bi-person-circle"></i>
                    <span class="ms-3">Meu Perfil</span>
                <% end %>
            </li>
            <li>
                <%= link_to perfil_path, class: 'flex items-center p-2 text-gray-100 rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 group' do %>
                    <i class="bi bi-gear-fill"></i>
                    <span class="ms-3">Configurações</span>
                <% end %>
            </li>
            <li>
            <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'flex items-center p-2 text-gray-100 rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 group' do %>
              <i class="bi bi-box-arrow-left"></i>
              <span class="ms-3">Sair</span>
            <% end %>
          </li>
          
        </ul>
    </div>
</aside>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const btn = document.querySelector('[data-drawer-toggle]');
        const sidebar = document.getElementById(btn.getAttribute('data-drawer-target'));
        
        btn.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
            sidebar.classList.toggle('translate-x-0');
        });
    });
</script>
