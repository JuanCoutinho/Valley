<section class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
  <h1 class="text-3xl lg:text-4xl font-extrabold text-white border-b-2 border-gray-700 pb-2 lg:mb-0 mb-4">Projetos</h1>
  <%= link_to "Novo Projeto", new_project_path, class: "bg-teal-500 text-white py-2 px-4 lg:py-3 lg:px-6 rounded-lg shadow-lg hover:bg-teal-900 transition ease-in-out duration-300" %>
</section>

<div class="mb-6">
  <form action="<%= projects_path %>" method="get" class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 p-4 bg-gray-900 rounded-lg shadow-lg">
    <input type="text" name="query" placeholder="Pesquisar projetos..." class="text-gray-200 w-full lg:w-3/4 p-3 border border-gray-700 rounded-lg bg-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 transition ease-in-out duration-300" />
    <button type="submit" class="bg-teal-500 text-white py-3 px-6 rounded-lg shadow-md hover:bg-teal-500 focus:outline-none focus:ring-2 focus:ring-teal-400 transition ease-in-out duration-300">Pesquisar</button>
  </form>
</div>



<div class="ribbon w-full h-1 rounded-md"></div>
<div id="projects" class="grid grid-cols-1 gap-6 mt-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
  <% @projects.each do |project| %>
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg border border-gray-700 transition-transform transform hover:scale-105 relative group">
      <!-- Imagem do Projeto -->
      <% if project.image.attached? %>
        <%= image_tag project.image, alt: "Imagem do Projeto: #{project.title}", class: "w-full h-56 object-cover group-hover:opacity-80 transition-opacity duration-300" %>
      <% else %>
        <div class="w-full h-56 bg-gray-600 flex items-center justify-center group-hover:bg-gray-500 transition-colors duration-300">
          <p class="text-gray-300 text-lg font-semibold">Sem imagem</p>
        </div>
      <% end %>

      <!-- Informações do Projeto -->
      <div class="p-4 bg-gray-900 bg-opacity-90 group-hover:bg-opacity-100 transition-colors duration-300">
        <h2 class="text-xl font-bold text-teal-400 mb-2 leading-tight">
          <%= project.title %>
        </h2>
        <p class="text-sm text-gray-300 mb-4">
          <%= project.ds_project %>
        </p>

        <!-- Botões de Curtir e Ver Projeto -->
        <div class="flex gap-4 items-center mt-4">
          <% if user_signed_in? %>
            <%= button_to toggle_like_project_path(project), method: :post, remote: true, id: "like_button_#{project.id}", class: "flex items-center p-2 bg-gray-700 text-gray-300 rounded-lg transition-colors duration-300 hover:bg-gray-600" do %>
              <%= image_tag 'https://upload.wikimedia.org/wikipedia/commons/thumb/5/54/Bot%C3%B3n_Me_gusta.svg/640px-Bot%C3%B3n_Me_gusta.svg.png', alt: 'Curtir', class: 'w-6 h-6 mr-2' %>
              <span id="like_count_<%= project.id %>" class="text-sm"><%= project.likes_count || 0 %></span>
            <% end %>
          <% end %>

          <%= link_to 'Ver Projeto', project, class: "inline-block bg-teal-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-teal-600 transition duration-300 shadow-md" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<script>
  // Toggle sidebar visibility on mobile
  document.getElementById('menu-toggle').addEventListener('click', function() {
    const sidebar = document.querySelector('aside');
    sidebar.classList.toggle('lg:hidden');
  });
</script>

<style>
  @keyframes run {
    0% { background-position: 0% 0%; }
    100% { background-position: 100% 0%; }
  }
  .ribbon {
    background: linear-gradient(to right, #00bfae, #1de9b6, #4db6ac, #80cbc4, #00bcd4, #26c6da, #4dd0e1);
    background-size: 300% 100%;
    animation: run 5s linear infinite;
  }
</style>
