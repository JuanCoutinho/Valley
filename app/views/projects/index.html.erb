<section class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8 max-w-screen-xl mx-auto px-4">
  <h1 class="text-4xl font-extrabold text-white border-b-4 border-teal-500 pb-2 lg:mb-0 mb-4">Projetos</h1>
</section>

<div class="mb-6">
  <form action="<%= projects_path %>" method="get" class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 p-4 bg-gray-800 rounded-lg shadow-lg">
    <input type="text" name="query" placeholder="Pesquisar projetos..." class="text-gray-200 w-full lg:w-3/4 p-3 border border-gray-700 rounded-lg bg-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300" />
    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-teal-600 transition duration-300">Pesquisar</button>
  </form>
</div>

<div class="ribbon w-full h-1 rounded-md bg-gradient-to-r from-teal-500 to-teal-300"></div>
<br>
<div id="projects" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @projects.each do |project| %>
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-xl border border-gray-700 transition-transform transform hover:scale-105 relative group">
      <% if project.image.attached? %>
        <%= image_tag project.image, alt: "Imagem do Projeto: #{project.title}", class: "w-full h-56 object-cover group-hover:opacity-80 transition-opacity duration-300" %>
      <% else %>
        <div class="w-full h-56 bg-gray-600 flex items-center justify-center group-hover:bg-gray-500 transition-colors duration-300">
          <p class="text-gray-300 text-lg font-semibold">Sem imagem</p>
        </div>
      <% end %>

      <p>Publicado por: <%= project.user.name if project.user %></p>
      
      <div class="p-4 bg-gray-900 bg-opacity-90 group-hover:bg-opacity-100 transition-colors duration-300">
        <h2 class="text-lg md:text-xl font-bold text-teal-400 mb-2 leading-tight truncate">
          <%= project.title %>
        </h2>
        <p class="text-sm text-gray-300 mb-4 leading-relaxed">
          <%= project.ds_project %>
        </p>

        <div class="flex justify-between items-center mt-4">
          <% if user_signed_in? %>
            <%= button_to toggle_like_project_path(project), method: :post, remote: true, id: "like_button_#{project.id}", class: "flex items-center p-2 bg-blue-500 text-gray-300 rounded-lg transition-colors duration-300 hover:bg-teal-600" do %>
              <%= image_tag 'https://cdn-icons-png.flaticon.com/512/5182/5182878.png', alt: 'Curtir', class: 'w-6 h-6 mr-2' %>
              <span id="like_count_<%= project.id %>" class="text-sm"><%= project.likes_count || 0 %></span>
            <% end %>
          <% end %>
          
          <%= link_to 'Ver Projeto', project, class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-teal-600 transition duration-300 shadow-md transform hover:scale-105" %>
        </div>
      </div>
    </div>
  <% end %>
</div>



<br>
<script>
  // Toggle sidebar visibility on mobile
  document.getElementById('menu-toggle').addEventListener('click', function() {
    const sidebar = document.querySelector('aside');
    sidebar.classList.toggle('lg:hidden');
  });
</script>

<style>
  @keyframes run {
    0% { background-position: 0% 0%; }
    100% { background-position: 100% 0%; }
  }
  .ribbon {
    background: linear-gradient(to right, #0d47a1, #1565c0, #1976d2, #1e88e5, #42a5f5, #64b5f6);
    background-size: 300% 100%;
    animation: run 5s linear infinite;
  }
</style>
