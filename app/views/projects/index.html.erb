<body class="bg-gray-800 text-gray-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-gradient-to-r from-gray-900 to-gray-800 p-6 shadow-lg">
      <!-- Sidebar content -->
      <% unless controller_name == 'home' && action_name == 'index' %>
        <%= render 'shared/sidebar' %>
      <% end %>
    </aside>

    <main class="flex-1 p-8 bg-gray-900">
      <!-- Notification -->
      <p class="text-green-400 mb-6 bg-gray-800 p-4 rounded-lg shadow-lg border-l-4 border-green-500">
        <%= notice %>
      </p>

      <!-- Page title -->
      <section>
      <h1 class="text-4xl font-extrabold mb-8 text-white border-b-2 border-gray-700 pb-2">Projetos </h1>
      <%= link_to "Novo Projeto", new_project_path, class: "bg-blue-700 text-white py-3 px-6 rounded-lg shadow-lg border border-blue-600 hover:bg-blue-800 transition ease-in-out duration-300" %>
      <section/>
      <!-- Projects list -->
      <div id="projects" class="grid grid-cols-1 mt-10 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @projects.each do |project| %>
          <div class="p-6 bg-gray-800 rounded-lg shadow-lg hover:bg-gray-700 transition ease-in-out duration-200 border border-gray-600">
            <%= render project %>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</body>
