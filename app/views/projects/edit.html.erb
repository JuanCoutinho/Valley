<div class="flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-gradient-to-r from-gray-900 to-gray-800 p-6 shadow-lg">
    <!-- Sidebar content -->
    <% unless controller_name == 'home' && action_name == 'index' %>
      <%= render 'shared/sidebar' %>
    <% end %>
  </aside>

  <main class="flex-1 p-6">
  <h1 class="text-2xl font-bold mb-4 text-white text-center">Editar Projeto</h1>

  <%= render "form", project: @project %>
  
  <br>
  
  <div>
    <%= link_to "Show this project", @project %> |
    <%= link_to "Back to projects", projects_path %>
  </div>
  
  </main>
</div>
