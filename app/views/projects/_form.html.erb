<%= form_with(model: project, class: "max-w-xl mx-auto p-8 bg-gray-900 rounded-xl shadow-xl space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-600 text-white p-4 rounded-lg shadow-md">
      <h2 class="text-lg font-semibold mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <%= form.label :title, class: "text-xl font-semibold text-gray-300 mb-2" %>
    <%= form.text_field :title, class: "border border-gray-700 bg-gray-800 text-white rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-full" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :ds_project, class: "text-xl font-semibold text-gray-300 mb-2" %>
    <%= form.text_area :ds_project, class: "border border-gray-700 bg-gray-800 text-white rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-full" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div>
    <%= form.submit "Submit", class: "bg-blue-600 text-white rounded-md py-3 px-6 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full transition duration-200" %>
  </div>
<% end %>
