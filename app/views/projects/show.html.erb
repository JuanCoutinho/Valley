<!-- app/views/projects/show.html.erb -->
<div class="max-w-4xl mx-auto p-8 bg-gray-900 text-white rounded-lg shadow-2xl">
  <!-- Project Details -->
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
    <h1 class="text-4xl font-bold mb-4"><%= @project.title %></h1>
    
    <% if @project.image.attached? %>
      <div class="relative mb-4">
        <%= image_tag @project.image, class: "w-full h-64 object-cover rounded-lg shadow-lg" %>
        <!-- Overlay with title -->
        <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-50 rounded-lg"></div>
      </div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex justify-between items-center space-x-4">
    <%= link_to "Voltar a Projetos", projects_path, class: "bg-gray-600 text-white rounded-md py-2 px-4 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 transition duration-200" %>
    
    <% if @project.user == current_user %>
      <div class="flex space-x-4">
        <%= link_to 'Editar', edit_project_path(@project), class: "bg-blue-600 text-white rounded-md py-2 px-4 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" %>
        <%= link_to 'Apagar', @project, method: :delete, data: { confirm: 'Tem certeza que deseja apagar este projeto?' }, class: "bg-red-600 text-white rounded-md py-2 px-4 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
