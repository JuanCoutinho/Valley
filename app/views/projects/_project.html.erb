<div id="<%= dom_id project %>" class="flex justify-center mb-6">
  <div class="w-full max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl rounded-lg shadow-lg overflow-hidden bg-gray-900 text-gray-100">
    <!-- Project Image -->
    <% if project.image.attached? %>
      <%= image_tag project.image, alt: 'Project Image', class: 'w-full h-48 object-cover' %>
    <% else %>
      <div class="w-full h-48  flex items-center justify-center">
        <p class="text-gray-300 text-lg">Sem imagem</p>
      </div>
    <% end %>

    <!-- Card Content -->
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-2 text-teal-400 text-center">
        <%= project.title %>
      </h2>

      <p class="text-sm text-gray-300 mb-4 text-center">
        <%= project.ds_project %>
      </p>
      
      <p class="text-xs text-gray-500 text-center">
        Criado por: <%= project.user.email %>
      </p>
    </div>
  </div>
</div>
