<section classw-full>
<div class="flex flex-col md:flex-row max-w-6xl mx-auto p-6 space-y-6 md:space-y-0 md:space-x-6">
  <!-- Seção do Perfil do Usuário -->
  <div class="w-full md:w-2/5 bg-gray-800 text-white rounded-lg p-6 shadow-lg">
    <h1 class="text-2xl font-bold mb-4">Perfil do Usuário</h1>
    <div class="mb-4 flex justify-center">
      <% if current_user.profile_image.attached? %>
        <%= image_tag rails_blob_url(current_user.profile_image, only_path: true), class: 'rounded-full border-4 border w-32 h-32 object-cover' %>
      <% else %>
        <div class="flex items-center justify-center w-32 h-32 bg-gray-700 rounded-full">
          <span class="text-gray-400">Sem Imagem</span>
        </div>
      <% end %>
    </div>
    <div>
      <p class="text-lg font-semibold">Bem-vindo, <%= @user.email %>!</p>
      <p class="text-gray-300">Tipo de usuário: <%= @user.user_type.humanize %></p>
    </div>
    <%= link_to "Editar Perfil", edit_user_registration_path, class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg transition duration-300 hover:bg-blue-700" %>
    
    <hr class="my-4 border-gray-600">
    
    <h2 class="text-lg font-semibold mb-2">Projetos</h2>
    <% if @projects.present? %>
      <% @projects.each do |project| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md border border-gray-700 transition-all duration-300 hover:shadow-xl relative group mb-4">
          <h2 class="text-lg md:text-xl text-center font-bold mb-2 leading-tight truncate">
            <%= project.title %>
          </h2>
          <% if project.image.attached? %>
            <%= image_tag project.image, alt: "Imagem do Projeto: #{project.title}", class: "w-full h-48 object-cover group-hover:opacity-90 transition-opacity duration-300" %>
          <% else %>
            <div class="w-full h-48 bg-gray-600 flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <p class="text-gray-300 text-lg font-semibold">Sem imagem</p>
            </div>
          <% end %>

          <p class="text-sm p-1 text-gray-400">Publicado por: <%= project.user.name if project.user %></p>
          
          <div class="p-4 bg-gray-900 bg-opacity-90 group-hover:bg-opacity-100 transition-colors duration-300">
            <p class="text-sm text-gray-300 mb-4 leading-relaxed">
              <%= project.ds_project %>
            </p>

            <div class="flex justify-between items-center mt-4">
              <% if user_signed_in? %>
                <%= button_to toggle_like_project_path(project), method: :post, remote: true, id: "like_button_#{project.id}", class: "flex items-center p-2 bg-blue-600 text-gray-300 rounded-lg transition-colors duration-300 hover:bg-blue-700" do %>
                  <%= image_tag 'https://cdn-icons-png.flaticon.com/512/5182/5182878.png', alt: 'Curtir', class: 'w-6 h-6 mr-2' %>
                  <span id="like_count_<%= project.id %>" class="text-sm"><%= project.likes_count || 0 %></span>
                <% end %>
              <% end %>
              
              <%= link_to 'Ver Projeto', project, class: "bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300 shadow-md" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-400">Nenhum projeto encontrado.</p>
    <% end %>
  </div>

  <!-- Descrição -->
  <div class="w-full md:w-3/5 bg-gray-900 text-white rounded-lg p-6 shadow-lg border border-gray-300">
    <h2 class="text-lg font-semibold mb-4">Descrição</h2>
    <div>
      <% if @user.description.present? %>
        <%= simple_format(Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(@user.description)) %>
      <% else %>
        <p class="text-gray-400">Descrição não disponível.</p>
      <% end %>
    </div>
  </div>
</div>
</section>