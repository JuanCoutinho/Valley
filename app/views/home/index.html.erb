  </nav>
</header>
<main class="max-w-4xl mx-auto text-center py-16 px-6">
  <div class="flex flex-col items-center space-y-6">
    <div class="flex items-center justify-center rounded-md">
      <%= image_tag "valley-dark.png", style: "height: 80%;" %>
    </div>
    <p class="text-dark" style="margin-top: -15%; font-size: 2rem;">
      Conectando o amanhã!
    </p>
    <div class="flex space-x-4">
      <%= link_to "Como funciona", "#how-it-works", class: "px-4 py-2 border text-gray-900 rounded-full hover:bg-gray-100" %>
      <%= link_to "Experimente agora", new_user_registration_path, class: "px-4 py-2 bg-black text-white rounded-full hover:bg-gray-800" %>
    </div>
  </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
</body>
</html>
<% end %>


<% if user_signed_in? %>
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bem-vindo</title>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        @keyframes slideDown {
            0% {
                opacity: 0;
                transform: translateY(-50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-in-out;
        }

        .slide-down {
            animation: slideDown 0.8s ease-out;
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white w-full">
<br><br><br>
    <div class="flex items-center justify-center min-h-screen p-6">
        <div class="bg-gray-800 p-4 bg-opacity-80 rounded-lg shadow-2xl p-8 w-full slide-down">
            <center>
                <% if current_user.profile_image.attached? %>
                    <%= image_tag rails_blob_url(current_user.profile_image, only_path: true), class: "w-40 h-40 rounded-full border-4 border-teal-500 shadow-lg transform hover:scale-110 transition duration-300" %>
                <% else %>
                    <div class="w-40 h-40 bg-gray-700 rounded-full flex items-center justify-center text-gray-400 text-2xl font-medium shadow-lg">
                        <span>Sem Imagem</span>
                    </div>
                <% end %>
            </center>
            
            <h1 class="text-5xl font-extrabold text-teal-400 mt-6 mb-4 fade- text-center">Seja Bem-vindo, <%= current_user.name %>!</h1>
            <p class="text-gray-300 text-lg mb-8 text-center fade-in">Você está logado com sucesso. Explore os projetos disponíveis e comece a investir com segurança.</p>
            
            <div class="flex justify-center space-x-4">
                <%= link_to 'Explorar Projetos', projects_path, class: 'bg-teal-500 hover:bg-teal-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md transform hover:scale-105 transition duration-300' %>
                <%= link_to 'Perfil', edit_user_registration_path, class: 'bg-gray-700 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md transform hover:scale-105 transition duration-300' %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
</body>
</html>
<% end %>
