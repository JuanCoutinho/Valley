<div class="p-6 bg-gray-900 rounded-lg shadow-lg mb-6">
  <% if notice %> 
    <p class="text-green-500 text-lg font-semibold mb-4"><%= notice %></p>
  <% end %>

  <%= render @post %> <!-- Remova o sÃ­mbolo de porcentagem extra aqui -->

  <div class="mt-4 flex space-x-4 items-center">
    <%= link_to "Editar este post", edit_post_path(@post), class: "bg-teal-500 hover:bg-teal-600 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-300" %>
    
    
    <%= button_to "Excluir este post", @post, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-300" %>
  </div>
</div>
