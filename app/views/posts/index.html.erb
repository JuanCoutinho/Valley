<h1 class="text-3xl font-bold mb-4">Postagens</h1>
<div class="mt-4">
  <%= link_to "Nova Postagem", new_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600 transition" %>
</div>
<br><br>
<div id="posts" class="space-y-4">
  <% @posts.order(created_at: :desc).each do |post| %> <!-- Ordenação por data de criação -->
    <div class="rounded-lg shadow-lg p-4">
      <div class="flex items-center mb-2">
        <div class="flex-shrink-0">
          <!-- Aqui você pode adicionar a imagem do usuário, se desejar -->
        </div>
        <div class="ml-4">
          <p class="text-gray-700 font-semibold"><%= post.user.name if post.user %></p> <!-- Nome do usuário -->
          <p class="text-gray-500 text-sm"><%= "#{time_ago_in_words(post.created_at)} atrás" %></p>
        </div>
      </div>
      <div class="mb-2">
        <%= render post %>
      </div>
      <p class="text-blue-500 hover:underline">
        <%= link_to "Ver Postagem", post %>
      </p>
    </div>
  <% end %>
</div>
